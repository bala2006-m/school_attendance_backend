generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://admin:Ramchin123@school-attendance.cr2ue6u44sny.eu-north-1.rds.amazonaws.com:3306/school_attendance"
}

enum Gender {
  M
  F
  O
}

enum DayOfWeek {
  Mon
  Tue
  Wed
  Thu
  Fri
  Sat
}

model Attendance_user {
  id        Int    @id @default(autoincrement())
  username  String @unique
  password  String
  role      String
  school_id Int

  school   School    @relation(fields: [school_id], references: [id])
  staff    Staff?    @relation("UserToStaff")
  students Student[]
  admin    Admin?

  @@index([school_id])
}

model School {
  id      Int    @id @default(autoincrement())
  name    String @unique
  address String
  photo   Bytes

  users              Attendance_user[]
  staff              Staff[]
  classes            Classes[]
  holidays           Holidays[]
  students           Student[]
  feedbacks          Feedback[]
  classTimetables    ClassTimetable[]
  staffAttendances   StaffAttendance[]
  studentAttendances StudentAttendance[]
  admins             Admin[]
  Messages           Messages[]
}

model Classes {
  id        Int    @id @default(autoincrement())
  class     String @map("class")
  section   String
  school_id Int

  school            School              @relation(fields: [school_id], references: [id])
  holidays          Holidays[]          @relation("HolidayClasses")
  students          Student[]
  studentAttendance StudentAttendance[]
  classTimetables   ClassTimetable[]
  feedbacks         Feedback[]

  @@index([school_id])
}

model Holidays {
  id        Int      @id @default(autoincrement())
  date      DateTime
  reason    String
  school_id Int?
  class_ids Json
  fn        String?  @db.Char(1)
  an        String   @db.Char(1)

  school  School?   @relation(fields: [school_id], references: [id])
  classes Classes[] @relation("HolidayClasses")

  @@index([school_id])
}

model Staff {
  id          Int     @id @default(autoincrement())
  username    String  @unique
  designation String
  name        String?
  email       String  @unique
  gender      Gender?
  mobile      String  @unique
  school_id   Int
  password    String

  school      School            @relation(fields: [school_id], references: [id])
  user        Attendance_user   @relation("UserToStaff", fields: [username], references: [username], onDelete: Cascade, onUpdate: Cascade)
  attendances StaffAttendance[]

  @@index([username])
  @@index([school_id])
}

model StaffAttendance {
  username  String
  date      DateTime
  fn_status String   @default("null")
  an_status String   @default("null")
  school_id Int?

  school School? @relation(fields: [school_id], references: [id])
  staff  Staff   @relation(fields: [username], references: [username])

  @@unique([username, date])
  @@index([school_id])
}

model Student {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  name      String?
  gender    Gender?
  email     String
  mobile    String
  class_id  Int
  school_id Int
  photo     Bytes?
  password  String

  class      Classes             @relation(fields: [class_id], references: [id])
  school     School              @relation(fields: [school_id], references: [id])
  user       Attendance_user     @relation(fields: [username], references: [username])
  attendance StudentAttendance[]

  @@index([username])
  @@index([school_id])
  @@index([class_id])
}

model StudentAttendance {
  username  String
  date      DateTime
  fn_status String   @default("null")
  an_status String   @default("null")
  school_id Int
  class_id  Int

  class   Classes @relation(fields: [class_id], references: [id])
  student Student @relation(fields: [username], references: [username])
  school  School  @relation(fields: [school_id], references: [id])

  @@unique([username, date], name: "username_date")
  @@index([school_id])
  @@index([class_id])
}

model ClassTimetable {
  id           Int       @id @default(autoincrement())
  schoolId     Int?
  classesId    Int?
  dayOfWeek    DayOfWeek
  periodNumber Int
  subject      String

  School  School?  @relation(fields: [schoolId], references: [id])
  Classes Classes? @relation(fields: [classesId], references: [id])

  @@index([schoolId])
  @@index([classesId])
}

model Feedback {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  feedback   String
  school_id  Int
  class_id   Int
  created_at DateTime @default(now())

  school School  @relation(fields: [school_id], references: [id])
  class  Classes @relation(fields: [class_id], references: [id])
}

model Admin {
  id          Int     @id @default(autoincrement())
  name        String?
  designation String
  gender      String  @default("null")
  mobile      String  @unique
  email       String  @default("example@gmail.com")
  photo       Bytes?
  username    String  @unique
  school_id   Int

  school School          @relation(fields: [school_id], references: [id])
  user   Attendance_user @relation(fields: [username], references: [username])

  @@index([school_id])
}

model Messages {
  id        Int     @id @default(autoincrement())
  messages  String  @db.VarChar(200)
  date      String? @db.VarChar(45)
  school_id Int

  school School @relation(fields: [school_id], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@index([school_id])
}

model LeaveRequest {
  id         Int      @id @default(autoincrement())
  username   String // The user requesting leave
  role       Role     @default(student) // Role of requester (optional, helpful for logic)
  school_id  Int
  class_id   Int
  from_date  DateTime // Leave start date
  to_date    DateTime // Leave end date
  reason     String? // Optional leave reason
  status     String   @default("pending") // "pending", "approved", "rejected"
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@index([username])
  @@index([school_id, class_id])
}

enum Role {
  admin
  staff
  student
}
